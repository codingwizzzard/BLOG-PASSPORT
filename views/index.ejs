<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog - Home Page</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../css/index.css">
</head>

<body>
    <%- include('./partials/header') %>
    <div class="container d-flex">
        <% data.map((val)=> { %>
        <div class="w-4 w-md-6 w-sm-12">
            <div class="each-blog-card">
                <div class="display-img">
                    <img src="<%= val.image %>" alt="blog">
                    <div class="img-filter"></div>
                    <div class="blog-dsc d-flex flex-wrap align-items-center justify-content-between">
                        <div>
                            <button class="blog-btn">
                                <a href="">
                                    <%= val.category %>
                                </a>
                            </button>
                        </div>
                        <div class="read-more">
                            <a href="">Read more
                                <div class="arrow-right">
                                    <i class="fa-solid fa-arrow-right"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="blog-text">
                    <h2>
                        <a href="">
                            <%= val.title %>
                        </a>
                    </h2>
                    <p>
                        <%= val.description %>
                    </p>
                </div>

                <div class="blog-feedback d-flex flex-wrap justify-content-between align-items-center">
                    <div class="likes-comments d-flex flex-wrap fw-bold text-dark">
                        <%= val.name %>
                    </div>

                    <div>
                        <i class="fa-regular fa-calendar"></i>
                        <%= val.date %>
                    </div>

                </div>
            </div>
        </div>
        <% }) %>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>